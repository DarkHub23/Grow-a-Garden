-- Main UI to open scripts

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local HttpService = game:GetService("HttpService")
local MAX_DISTANCE = 50 -- ‡∏£‡∏∞‡∏¢‡∏∞‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£ (‡πÄ‡∏ä‡πà‡∏ô 50 studs)

local function isNearby(egg)
    if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then 
        return false 
    end
    local hrp = player.Character.HumanoidRootPart
    return (egg:GetPivot().Position - hrp.Position).Magnitude <= MAX_DISTANCE
end


-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏•‡∏ö GUI ‡πÄ‡∏î‡∏¥‡∏° ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
local function clearOldGui(name)
	local oldGui = playerGui:FindFirstChild(name)
	if oldGui then
		oldGui:Destroy()
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á GUI ‡∏´‡∏•‡∏±‡∏Å‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏õ‡∏¥‡∏î‡∏™‡∏Ñ‡∏£‡∏¥‡∏õ‡∏ï‡πà‡∏≤‡∏á ‡πÜ
